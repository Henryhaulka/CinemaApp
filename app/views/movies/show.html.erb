<section class = 'half_width  movies_content '>
   <h1 class= 'text-center'><%= @movie.name%></h1><br>
   
   <div class= 'w-50 mx-auto'>
      <div><%= image_tag(@movie.avatar.url(@movie), class:'movie_image')%><br></div>
       in <%=@movie.location%> Cinema, <span class= 'price1 text-white'> <%=price(@movie)%></span><br>
   <div><br>
   <%if @category.exists? %>
      <h5 >Categories</h5>
        <% @category.each do |c|%>
          <li><%= c.name%></li>
        <%end%>
   <%end%>
   </div>
   </div><br>
  <div>
     <%if current_user%>
         <div class='button'>
            <div>
              <%= like_or_unlike(@liked,@movie)%>
            </div>
               <div class= 'counter'><%= @likers.size%></div>
         </div>
     <%end%>
  </div><br>

   <%if  @likers.exists?%>
      <h5>Movies liked by</h5>
         <% @likers.each do |user| %>
         <%= link_to image_tag("#{user.user_image}", class:'thumb'), user %>&nbsp
         <%end%>
   <%end%>


  

   <p><span class="bold">About:</span> <%= @movie.description%></p>
   <p class = 'text-white'>Available Spots:<span class="text-primary"> <%= @movie.capacity%></span></p>
   <p class ="text-white">Viewing Time: <span class="text-primary"><%= day_time(@movie) %></span></p>
     
      <%= registered_or_unregistered(@movie,@registered)%>
   <div class='register'>
      <%= link_to "Who's Registered?", movie_registrations_path(@movie) %>
   </div>

   <%if current_user_admin?%>
      <div>
         <%= link_to "Edit Movie", edit_movie_path(@movie), class:'btn btn-dark'%>
         <%= link_to "Delete Movie", movie_path(@movie),method: :delete, class:'btn btn-danger',
         data: { confirm: "Are you sure you want to delete #{@movie.name}"}%>
      </div> 
   <%end%>  
</section>
